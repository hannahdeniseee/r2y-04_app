<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_Screen"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-244dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/home_header" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_gravity="center"
                android:layout_width="315dp"
                android:layout_height="100dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="33dp"
                android:background="@color/bg_color"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_fil_home_user" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="315dp"
                android:layout_height="100dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@color/bg_color"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_fil_home_info" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="315dp"
                android:layout_height="100dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@color/bg_color"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_home_ph"/>

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="315dp"
                android:layout_height="100dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@color/bg_color"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_fil_home_inter"/>

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="252dp"
                android:layout_height="80dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="70dp"
                android:layout_gravity="center"
                android:background="@color/bg_color"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_fil_home_swi" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
